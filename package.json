{
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export",
    "serve": "npx serve@latest out",
    "preview": "npm run build && npm run serve",
    "clean": "rimraf .next out",
    "clean:all": "rimraf .next out node_modules package-lock.json",
    "reinstall": "npm run clean:all && npm install",
    "check": "npm run type-check && npm run lint",
    "type-check": "tsc --noEmit",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:build": "docker build -t portfolio .",
    "docker:run": "docker run -p 3000:3000 portfolio",
    "docker:dev": "docker-compose up --build",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir=out",
    "deploy:github": "npm run build && touch out/.nojekyll && git add out && git commit -m 'Deploy to GitHub Pages' && git subtree push --prefix out origin gh-pages"
  },
